{
  "name": "personal-finance-dashboard",
  "version": "1.0.0",
  "description": "A comprehensive personal finance management dashboard with expense tracking, budgeting, bill reminders, and financial goal setting",
  "main": "main.js",
  "scripts": {
    "start": "concurrently \"cd backend && node simple-server.js\" \"wait-on http://localhost:5001 && electron .\"",
    "desktop": "start-desktop.bat",
    "install:backend": "cd backend && npm install",
    "setup": "npm run install:backend",
    "electron": "electron .",
    "build": "electron-builder"
  },
  "keywords": [
    "finance",
    "dashboard",
    "expense-tracking",
    "budgeting",
    "bills",
    "goals",
    "personal-finance",
    "money-management"
  ],
  "author": "Aslesh Sura",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/personal-finance-dashboard.git"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "devDependencies": {
    "concurrently": "^9.2.0",
    "electron": "^37.1.0",
    "electron-builder": "^26.0.12",
    "wait-on": "^8.0.3"
  },
  "dependencies": {
    "better-sqlite3": "^12.2.0"
  }
}
